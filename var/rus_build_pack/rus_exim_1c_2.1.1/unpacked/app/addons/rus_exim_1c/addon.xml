<addon scheme='2.0' edition_type="ROOT,ULT:VENDOR">
    <id>rus_exim_1c</id>
    <version>2.1.1</version>
    <default_language>ru</default_language>
    <name>Русская локализация - Экспорт, импорт в 1С</name>
    <description>Экспорт, импорт в 1С</description>
    <priority>2999</priority>
    <status>active</status>
    <authors>
        <author>
            <name>Simtech Development</name>
            <email>sales@simtechdev.com</email>
            <url>http://www.simtechdev.com/</url>
        </author>
    </authors>
    <compatibility>
        <core_version>
            <min>4.1.1</min>
        </core_version>
        <core_edition>
            ULTIMATE
        </core_edition>
    </compatibility>
	<translations> 
		<item for="name" lang="en">Russian localization - Export, import in 1С</item>
		<item for="description" lang="en">Export, import in 1С</item>
	</translations>
    <settings layout="separate" edition_type="ROOT">
        <sections>
            <section id="general">
                <name>Общие настройки</name>
                <translations>
                    <item lang="en" for="name">General settings</item>
                </translations>
                <items>
					<item id="exim_1c_export_for_company">
                        <name>Осуществлять обмен с компанией</name>
						<translations>
							<item lang="en">Exchange with company</item>
						</translations>
                        <type>selectbox</type>
                        <default_value>1</default_value>
                    </item>
					<item id="exim_1c_export_product_name">
                        <type>radiogroup</type>
                        <name>Использовать в названии товара</name>
							<translations>
								<item lang="en">Use in the product name</item>
							</translations>
                        <default_value>name</default_value>
                        <variants>
                            <item id="name">
                                <name>Наименование</name>
								<translations>
									<item lang="en">Name</item>
								</translations>
                            </item>
                            <item id="full_name">
                                <name>Полное наименование</name>
								<translations>
									<item lang="en">Full name</item>
								</translations>
                            </item>
                        </variants>
                    </item>
					<item id="exim_1c_export_product_code">
                        <type>radiogroup</type>
                        <name>Использовать в артикуле товара</name>
						<translations>
							<item lang="en">Use in the product article</item>
						</translations>
                        <default_value>art</default_value>
                        <variants>
                            <item id="art">
                                <name>Артикул</name>
								<translations>
									<item lang="en">Article</item>
								</translations>
                            </item>
                            <item id="code">
                                <name>Код номенклатуры</name>
								<translations>
									<item lang="en">Classification code</item>
								</translations>
                            </item>
                        </variants>
                    </item>
					<item id="exim_1c_export_brend">
                        <name>Использовать изготовителя</name>
						<translations>
							<item lang="en">Use manufacturer</item>
						</translations>
                        <type>checkbox</type>
                        <default_value/>
                    </item>
					<item id="exim_1c_export_stock_empty">
                        <name>Скрывать товары с нулевым остатком</name>
						<translations>
							<item lang="en">Hide products with zero stock quantity</item>
						</translations>
                        <type>checkbox</type>
                        <default_value/>
                    </item>
                    <item id="exim_1c_add_tax">
                        <name>Добавлять налог к товарам</name>
						<translations>
							<item lang="en">Add tax to products </item>
						</translations>
                        <type>checkbox</type>
                        <default_value/>
                    </item>
                </items>
            </section>
            <section id="features_options" edition_type="ROOT">
                <name>Настройка параметров и опций</name>
				<translations>
					<item lang="en">Setting features and options</item>
				</translations>
                <items>
                    <item id="exim_1c_export_option_name">
                        <name>Имя опции</name>
						<translations>
							<item lang="en">Option name</item>
						</translations>
                        <type>inputbox</type>
                        <default_value>Варианты</default_value>
                    </item>
                    <item id="exim_1c_export_inventory_zero">
                        <name>Создавать комбинацию с нулевым количеством</name>
						<translations>
							<item lang="en">Create combination with zero quantity</item>
						</translations>
                        <type>checkbox</type>
                        <default_value/>
                    </item>
                    <item id="exim_1c_export_add_inventory">
                        <name>Способы отображения характеристик из 1С</name>
						<translations>
							<item lang="en">Ways to display properties from 1С</item>
						</translations>
                        <type>selectbox</type>
                        <default_value>standart</default_value>
                        <variants>
                            <item id="standart">
                                <name>Стандартное отображение</name>
								<translations>
									<item lang="en">Standard way</item>
								</translations>
                            </item>
                            <item id="no_price">
                                <name>По свойствам объекта</name>
								<translations>
									<item lang="en">By object properties</item>
								</translations>
                            </item>
                        </variants>
                    </item>
                </items>
            </section>
            <section id="shipping_features" edition_type="ROOT">
                <name>Параметры доставки</name>
				<translations>
					<item lang="en">Shipping features</item>
				</translations>
                <items>
                    <item id="exim_1c_export_order_shipping">
                        <name>Включать отдельно стоимость доставки заказа для 1С</name>
						<translations>
							<item lang="en">Consider shipping cost a separate product in 1С</item>
						</translations>
                        <type>checkbox</type>
                        <default_value/>
                    </item>
                    <item id="exim_1c_export_weight_property">
                        <name>Реквизит веса в 1С</name>
						<translations>
							<item lang="en">Weight property in 1C</item>
						</translations>
                        <type>textarea</type>
                        <default_value>Вес ([Вид номенклатуры])</default_value>
                    </item>
                    <item id="exim_1c_display_weight">
                        <name>Отображать вес, как характеристику</name>
						<translations>
							<item lang="en">Display weight as a feature</item>
						</translations>
                        <type>checkbox</type>
                        <default_value/>
                    </item>
                    <item id="exim_1c_free_shipping">
                        <name>Бесплатная доставка</name>
						<translations>
							<item lang="en">Free shipping</item>
						</translations>
                        <type>textarea</type>
                        <default_value>Бесплатная доставка ([Вид номенклатуры])</default_value>
                    </item>
                    <item id="exim_1c_display_free_shipping">
                        <name>Отображать бесплатную доставку, как характеристику</name>
						<translations>
							<item lang="en">Display free shipping as a feature</item>
						</translations>
                        <type>checkbox</type>
                        <default_value/>
                    </item>                   
                    <item id="exim_1c_shipping_cost">
                        <name>Стоимость доставки</name>
						<translations>
							<item lang="en">Shipping cost</item>
						</translations>
                        <type>textarea</type>
                        <default_value>Стоимость доставки ([Вид номенклатуры])</default_value>
                    </item>                
                    <item id="exim_1c_number_of_items">
                        <name>Количество штук в коробке</name>
						<translations>
							<item lang="en">Number of items in box</item>
						</translations>
                        <type>textarea</type>
                        <default_value>Количество штук в коробке ([Вид номенклатуры])</default_value>
                    </item>                                        
                    <item id="exim_1c_box_length">
                        <name>Длина коробки</name>
						<translations>
							<item lang="en">Box length</item>
						</translations>
                        <type>textarea</type>
                        <default_value>Длина коробки ([Вид номенклатуры])</default_value>
                    </item>
                                        
                    <item id="exim_1c_box_width">
                        <name>Ширина коробки</name>
						<translations>
							<item lang="en">Box width</item>
						</translations>
                        <type>textarea</type>
                        <default_value>Ширина коробки ([Вид номенклатуры])</default_value>
                    </item>
                                        
                    <item id="exim_1c_box_height">
                        <name>Высота коробки</name>
						<translations>
							<item lang="en">Box height</item>
						</translations>
                        <type>textarea</type>
                        <default_value>Высота коробки ([Вид номенклатуры])</default_value>
                    </item>
                </items>
            </section>
			<section id="prices" edition_type="ROOT">
                <name>Установка видов цен</name>
				<translations>
					<item lang="en">Adoption of price types</item>
				</translations>
                <items>
					<item id="exim_1c_export_add_prices">
                        <name>Использовать эту функцию</name>
						<translations>
							<item lang="en">Use this function</item>
						</translations>
                        <type>checkbox</type>
                        <default_value/>
                    </item>	
					<item id="exim_1c_export_check_prices">
                        <name>Запустить модуль в режиме отладки цен</name>
						<translations>
							<item lang="en">Run add-on in price debug mode</item>
						</translations>
                        <type>checkbox</type>
                        <default_value/>
                    </item>	
					<item id="exim_1c_export_prices">
                        <type>template</type>
                        <default_value>instruction_prices.tpl</default_value>
                    </item>
                </items>
            </section>
			<section id="true_orders" edition_type="ROOT">
                <name>Ограничение заказов</name>
				<translations>
					<item lang="en">Limitation of orders</item>
				</translations>
                <items>
					<item id="exim_1c_export_add_true_orders">
                        <name>Использовать эту функцию</name>
						<translations>
							<item lang="en">Use this function</item>
						</translations>
                        <type>checkbox</type>
                        <default_value/>
                    </item>	
					<item id="exim_1c_from_order_id">
                        <name>Выгружать с номера</name>
						<translations>
							<item lang="en">Export starting from ID</item>
						</translations>
                        <type>inputbox</type>
                    </item>
					<item id="exim_1c_export_order_statuses">
                        <name>Статусы ордеров</name>
						<translations>
							<item lang="en">Order statuses</item>
						</translations>
                        <type>multiple checkboxes</type>
                        <variants/>
                    </item>
                </items>
            </section>
            <section id="instruction" edition_type="ROOT">
                <name>Инструкции</name>
				<translations>
					<item lang="en">Instructions</item>
				</translations>
                <items>
                    <item id="instruction">
                        <type>template</type>
                        <default_value>instruction.tpl</default_value>
                    </item>
                </items>
            </section>
        </sections>
    </settings>
